{
  "__chrome|opera|edge__manifest_version": 3,
  "__firefox__manifest_version": 2,

  "name": "Sentry Cookie Sync",
  "version": "0.0.0",

  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "Sync cookies for sentry local frontend development",
  "homepage_url": "https://github.com/abhijithvijayan/web-extension-starter",
  "short_name": "Cookie Sync",

  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs"
  ],

  "__chrome|opera__host_permissions": [
    "https://*.sentry.dev/*",
    "https://dev.getsentry.net/*",
    "https://sentry.io/*"
  ],

  "__firefox__content_security_policy": "script-src 'self'; object-src 'self'",
  "__chrome|opera__content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "__chrome|firefox__author": "abhijithvijayan",
  "__opera__developer": {
    "name": "abhijithvijayan"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "__firefox__browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Sentry Cookie Sync",
    "browser_style": false
  },
  "__chrome|opera__action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Sentry Cookie Sync"
  },

  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "__firefox__scripts": [
      "js/background.bundle.js"
    ],
    "__chrome|opera__service_worker": "js/serviceworker.bundle.js"
  },

  "content_scripts": [{
    "matches": [
      "https://*.sentry.dev/*",
      "https://dev.getsentry.net/*",
      "https://sentry.io/*"
    ],
    "js": [
      "js/contentScript.bundle.js"
    ]
  }]
}
